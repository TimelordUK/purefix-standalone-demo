<!-- Add these to PureFix.Transport.csproj PropertyGroup -->

<PropertyGroup>
  <!-- Description shown on nuget.org and in package managers -->
  <Description>High-performance C# FIX protocol engine for .NET. Features strongly-typed message generation from FIX XML dictionaries, automatic serialization/deserialization, full session management (logon, heartbeat, sequence numbers, gap fill recovery), SSL/TLS support, file and memory message stores, and broker reset handling. Supports FIX 4.x and 5.x protocols.</Description>

  <!-- Tags for NuGet search - crucial for discoverability -->
  <PackageTags>fix;fix-protocol;fix-engine;fix-api;financial;trading;fix44;fix50;fix42;quickfix;session;ssl;tls;strongly-typed;codegen;serialization;fintech;capital-markets;order-management;execution;market-data</PackageTags>

  <!-- README file displayed on nuget.org package page -->
  <PackageReadmeFile>README.md</PackageReadmeFile>

  <!-- Links -->
  <PackageProjectUrl>https://github.com/TimelordUK/purefix-standalone-demo</PackageProjectUrl>
  <RepositoryUrl>https://github.com/TimelordUK/PureFix</RepositoryUrl>
  <RepositoryType>git</RepositoryType>

  <!-- Optional: Icon, license, etc -->
  <!-- <PackageIcon>icon.png</PackageIcon> -->
  <PackageLicenseExpression>MIT</PackageLicenseExpression>
</PropertyGroup>

<!-- Include the README.md file in the NuGet package -->
<ItemGroup>
  <None Include="README.md" Pack="true" PackagePath="\" />
</ItemGroup>

<!--
  IMPORTANT: Copy PureFix.Transport.README.md to README.md in your
  PureFix.Transport project folder, then add the above to your .csproj

  When you run `dotnet pack`, the README will be included and displayed
  on nuget.org
-->
